<h1>Listing requests</h1>

<table>
  <tr>
    <th>Ip</th>
    <th>Type</th>
    <th>Header</th>
    <th>Content</th>
    <th>Error code</th>
    <th>Log</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.ip %></td>
    <td><%= request.type %></td>
    <td><%= request.header %></td>
    <td><%= request.content %></td>
    <td><%= request.error_code %></td>
    <td><%= request.log_id %></td>
    <td><%= link_to 'Show', [@log,request] %></td>
    <td><%= link_to 'Edit', edit_log_request_path(@log,request) %></td>
    <td><%= link_to 'Destroy', [@log,request], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

